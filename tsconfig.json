{
    "compilerOptions": {
      "jsx": "react",
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "outDir": "./lib",
      "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "example", "dist", "lib"]
  }
  

